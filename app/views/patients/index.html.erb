<h1>Patient List</h1>

<%= link_to 'New patient', new_patient_path %>

<table>
  <tr>
    <th>Patient</th>
    <th>Address</th>
  </tr>

  <% @patients.each do |patient| %>
    <tr>
      <td><%= patient.name %></td>
      <td><%= patient.address %></td>
      <td><%= link_to 'Show', patient_path(patient) %></td>
      <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
      <td><%= link_to 'Delete', patient_path(patient),
          method: :delete,
          data: { confirm: 'Are you sure you would like to delete patient: ' + patient.name + '?' } %></td>
    </tr>
  <% end %>
</table>
